.span10
  .ui-box
    %h5.title
      Users (#{@users.count})
    %ul.well-list
      - @users.each do |user|
        %li(id="#{user.id}")
          = user.name
          .pull-right
      - if @users.blank?
        %p.nothing_here_message 0 users matches
      - else
        %li.bottom
          = paginate @users, param_name: :users_page, theme: "gitlab"
